  mc:Ignorable="d" Width="640" Height="480" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" MinWidth="640" MinHeight="480" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="0">

